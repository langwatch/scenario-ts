{
  "name": "@langwatch/scenario-ts",
  "version": "0.2.0-prerelease.0",
  "description": "A TypeScript library for testing AI agents using scenarios",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --external chalk --external ora",
    "buildpack": "pnpm run build && pnpm pack",
    "watch": "pnpm run build -- --watch src",
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "eslint .",
    "examples:vitest:run": "export SCENARIO_BATCH_ID=scenariobatch_$(uuidgen) && pnpm run buildpack && (cd examples/vitest && pnpm install) && pnpm -F vitest run test",
    "prepublishOnly": "pnpm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/langwatch/scenario-ts.git"
  },
  "bugs": {
    "url": "https://github.com/langwatch/scenario-ts/issues"
  },
  "homepage": "https://github.com/langwatch/scenario-ts#readme",
  "author": "LangWatch",
  "license": "MIT",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.15.4",
  "dependencies": {
    "@ag-ui/core": "0.0.28",
    "@ai-sdk/openai": "1.3.22",
    "ai": ">=4.0.0",
    "chalk": "4.1.2",
    "csv-stringify": "6.5.2",
    "rxjs": "7.8.2",
    "stringify": "5.2.0",
    "xksuid": "0.0.4",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "9.26.0",
    "@types/jest": "^29.0.0",
    "@types/node": "22.15.15",
    "@typescript-eslint/parser": "8.32.0",
    "eslint": "9.26.0",
    "eslint-import-resolver-typescript": "4.3.4",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "globals": "16.1.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsup": "8.4.0",
    "tsx": "4.19.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "8.32.0",
    "vitest": "3.1.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  }
}
