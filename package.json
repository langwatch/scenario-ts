{
  "name": "@langwatch/scenario-ts",
  "version": "0.1.0",
  "description": "A TypeScript library for testing AI agents using scenarios",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run clean && tsc && tsc -p tsconfig.esm.json && pnpm pack",
    "test": "jest --runInBand",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/langwatch/scenario-ts.git"
  },
  "bugs": {
    "url": "https://github.com/langwatch/scenario-ts/issues"
  },
  "homepage": "https://github.com/langwatch/scenario-ts#readme",
  "author": "LangWatch",
  "license": "MIT",
  "engines": {
    "node": ">=14",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.15.4",
  "dependencies": {
    "@ai-sdk/openai": "1.3.21",
    "ai": "4.3.13",
    "chalk": "4.1.2",
    "dotenv": "16.5.0",
    "ora": "5.4.1",
    "zod": "3.24.3"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "22.15.3",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "4.19.4",
    "typescript": "^5.0.0",
    "vitest": "3.1.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  }
}
