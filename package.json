{
  "name": "@langwatch/scenario-ts",
  "version": "0.1.0",
  "description": "A TypeScript library for testing AI agents using scenarios",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "buildpack": "pnpm run build && pnpm pack",
    "watch": "pnpm run build -- --watch src",
    "test": "vitest run",
    "run:examples:vitest": "cd examples/vitest && pnpm run test",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/langwatch/scenario-ts.git"
  },
  "bugs": {
    "url": "https://github.com/langwatch/scenario-ts/issues"
  },
  "homepage": "https://github.com/langwatch/scenario-ts#readme",
  "author": "LangWatch",
  "license": "MIT",
  "engines": {
    "node": ">=14",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.15.4",
  "dependencies": {
    "@ai-sdk/openai": "1.3.22",
    "ai": ">=4.0.0",
    "chalk": "5.4.1",
    "dotenv": "16.5.0",
    "ora": "8.2.0",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "22.15.15",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsup": "8.4.0",
    "tsx": "4.19.4",
    "typescript": "^5.0.0",
    "vitest": "3.1.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  }
}
