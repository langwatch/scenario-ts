# Forces the project to use the exact Node.js and npm versions specified in package.json
engine-strict=true

# Saves dependencies with exact version numbers (1.2.3) instead of using ^ (^1.2.3)
save-exact=true

# Hoists all dependencies to the top-level node_modules to avoid duplicates
# This can help with compatibility issues in monorepos or complex dependency trees
shamefully-hoist=true

# Allows installation even if peer dependencies don't match exactly
# Useful when working with packages that have outdated peer dependency requirements
strict-peer-dependencies=false

# Automatically installs peer dependencies without prompting
# Saves time by not having to manually install peer dependencies
auto-install-peers=true 